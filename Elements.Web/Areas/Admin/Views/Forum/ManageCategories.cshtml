@model IEnumerable<Models.Category.CategoryViewModel>
@{
    ViewData["Title"] = "ManageCategories";
}

<h2>ManageCategories</h2>

<div class="row">
    <div class="col">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th class="w-50%">Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(item.Name)</td>
                        <td>@(item.Description)</td>
                        <td>
                            <a asp-area="Admin" asp-action="EditCategory">Edit</a>
                            <a asp-area="Admin" asp-action="DeleteCategory">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>