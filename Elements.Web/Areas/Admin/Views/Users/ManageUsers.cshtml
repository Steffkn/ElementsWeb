@model IEnumerable<Elements.Models.User>
@{
    ViewData["Title"] = "Manage users";
}

<h2>Manage users</h2>

<div class="row">
    <div class="col">
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th class="d-none d-md-table-cell">Confirmed email</th>
                    <th class="d-none d-md-table-cell">Register date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a asp-controller="Users" asp-action="Details" asp-route-userId="@item.Id">@(item.UserName)</a></td>
                        <td>@(item.NormalizedEmail)</td>
                        <td class="d-none d-md-table-cell">@(item.EmailConfirmed)</td>
                        <td class="d-none d-md-table-cell">@(item.RegisterDate)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>