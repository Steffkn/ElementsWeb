@model AddCategoryViewModel

<div asp-validation-summary="All"></div>

<form method="post" asp-area="Admin" asp-action="AddCategory" asp-controller="Forum" enctype="multipart/form-data">
    <div class="form-group row">
        <div class="col">
            <label asp-for="Name" class="col-form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class=""></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label asp-for="Description" class="col-form-label"></label>
            <textarea asp-for="Description" rows="4" class="form-control"></textarea>
            <span asp-validation-for="Description" class=""></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label asp-for="MainCategoryId" class="col-form-label"></label>
            <select asp-for="MainCategoryId" asp-items="@(new SelectList(Model.MainCategories,"Id","Name"))" class="custom-select">
                <option selected="selected" value="">Select category</option>
            </select>
            <span asp-validation-for="MainCategoryId" class=""></span>
        </div>
    </div>

    @*<div class="form-group row">
            <div class="col">
                <label asp-for="ImageFile" class="col-form-label"></label>
                <button id="selectImage" class="btn btn-info"></button>
                <input asp-for="ImageFile" type="file" />
                <span asp-validation-for="ImageFile" />
            </div>
        </div>*@

    <div class="form-group row">
        <div class="col-auto">
            <label asp-for="ImageFile" class="btn btn-info">Upload Icon</label>
        </div>
        <div class="col">
            <input asp-for="ImageFile" type="file" hidden accept="image/png" />
            <span asp-validation-for="ImageFile" />
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>