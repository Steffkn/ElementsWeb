@model EditCategoryViewModel

<div asp-validation-summary="All"></div>

<form asp-action="EditCategory" asp-controller="Forum" method="post" enctype="multipart/form-data">
    <div class="form-group row">
        <input asp-for="Id" hidden />
        <input asp-for="IconUrl" hidden />
        <div class="col">
            <label asp-for="Name" class="col-form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class=""></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label asp-for="Description" class="col-form-label"></label>
            <textarea asp-for="Description" rows="4" class="form-control"></textarea>
            <span asp-validation-for="Description" class=""></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col">
            <label asp-for="MainCategoryId" class="col-form-label"></label>
            <select asp-for="MainCategoryId" asp-items="@(new SelectList(Model.MainCategories, "Id", "Name"))" class="custom-select">
                <option selected="selected" value="">Select category</option>
            </select>
            <span asp-validation-for="MainCategoryId" class=""></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-auto">
            <label asp-for="IsPrivate" class="col-form-label"></label>
            <input asp-for="IsPrivate" hidden />
        </div>
        <div class="col">
            <label asp-for="IsActive" class="col-form-label"></label>
            <input asp-for="IsActive" hidden />
        </div>
    </div>


    <div class="form-group row">
        <div class="col-auto">
            <label asp-for="ImageFile" class="btn btn-info">
                <img src="@Model.IconUrl" alt="select icon" width="50" height="50" />
            </label>
        </div>
        <div class="col">
            <input asp-for="ImageFile" type="file" hidden />
            <span asp-validation-for="ImageFile" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-info">Edit</button>
            <a asp-controller="Forum" asp-action="ManageCategories" class="btn btn-outline-dark">Cancel</a>
        </div>
    </div>
</form>
