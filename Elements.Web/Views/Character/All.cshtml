@model IEnumerable<SimpleCharacterViewModel>
@{
    ViewData["Title"] = "Characters";
}

<h2>Characters</h2>

<div class="row">
    <div class="col">
        <a asp-area="" asp-controller="Character" asp-action="AddCharacter" class="btn btn-info m-0">
            <i class="fa fa-plus"></i> Create new
        </a>
    </div>
</div>

<table class="table table-hover table-dark my-4">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Character Class
            </th>
        </tr>
    </thead>
    <tbody>
        @Html.DisplayForModel()
    </tbody>
</table>
