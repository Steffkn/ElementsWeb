@model Dictionary<ForumCategoryType, List<ForumCategoryViewModel>>
@{
    ViewData["Title"] = "Index";
}

<!-- Main container -->
<main>
    <section class="forum">
        <header class="forum-header text-center text-info">
            <img src="https://orig00.deviantart.net/3899/f/2012/362/a/f/afccf67338f51588f12664c87eaee7d4-d33wydh.png" alt="banner" />
            <h2>Welcome here, ya fool!</h2>
        </header>

        <div class="row my-3">
            <div class="col">
                <form class="form-inline">
                    <div class="input-group">
                        <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-info" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col">
                <a asp-controller="Forum" asp-action="AddTopic" class="btn btn-info m-0">
                    <i class="fa fa-plus"></i> New topic
                </a>
            </div>
        </div>

        @foreach (var type in Model)
        {
            <div class="forum-category">
                <header class="forum-category-header">
                    <h1 class="forum-category-heading">@type.Key.ToString()</h1>
                </header>
                <div class="forum-cards">
                    @Html.DisplayFor(m => type.Value)
                </div>
            </div>
        }

    </section>
</main>