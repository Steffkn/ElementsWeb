@model IEnumerable<Elements.Web.Models.Forum.ViewModels.ForumCategoryViewModel>
@{
    ViewData["Title"] = "Index";
}

<!-- Main container -->
<main>
    <section class="forum">
        <header class="forum-header text-center text-info">
            <img src="https://orig00.deviantart.net/3899/f/2012/362/a/f/afccf67338f51588f12664c87eaee7d4-d33wydh.png" alt="banner" />
            <h2>Welcome here, ya fool!</h2>
        </header>

        <div class="forum-category">
            <header class="forum-category-header">
                <h1 class="forum-category-heading">News</h1>
            </header>
            <div class="forum-cards">
                @foreach (var item in Model)
                {
                    <a asp-area="" asp-controller="Forum" asp-action="ShowTopic" asp-route-topicId="@item.Id" class="forum-card">
                        <div class="fa-3x text-center text-light">
                            <i class="fas fa-headset" style="line-height: 0"></i>
                        </div>
                        <div class="forum-card-body">
                            <header class="forum-card-header">
                                <h2 class="forum-card-heading">@(item.Name)</h2>
                            </header>
                            <div class="forum-card-content">
                                <p>
                                    @(item.Description)
                                </p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>

    </section>
</main>

<footer class="text-light">
    <p>Posted by: Stefan</p>
    <p>
        Contact information:
        <a href="mailto:someone@example.com"> someone@example.com</a>.
    </p>
</footer>
