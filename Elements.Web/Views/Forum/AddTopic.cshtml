@model Elements.Web.Models.Forum.ViewModels.TopicViewModel
@{
    ViewData["Title"] = "AddTopic";
}

<div>
    <form asp-controller="Forum" asp-action="AddTopic">
        <div>
            <label asp-for="Title"></label>
            <input asp-for="Title" />
        </div>
        <div>
            <label asp-for="Content"></label>
            <textarea asp-for="Content" class="form-text"></textarea>
        </div>
        <div>
            <button type="submit">Add</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="~/lib/summernote/dist/summernote.css" rel="stylesheet" />
    <environment include="Development">
        <script src="~/lib/summernote/dist/summernote-bs4.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/summernote/dist/summernote-bs4.min.js"></script>
    </environment>
    <script>
    </script>
}

